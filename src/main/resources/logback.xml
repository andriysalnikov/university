<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>
        %black(%d{ISO8601}) [%highlight(%-5p)] [%yellow(%25.25c{0})] - %m%n
      </pattern>
    </encoder>
  </appender>
  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>../webapps/university/WEB-INF/logs/university.%d{yyyy-MM-dd}.log</fileNamePattern>
    </rollingPolicy>
    <encoder>
      <pattern>
        %d{ISO8601} [%-5p] [%25.25c{0}] - %m%n
      </pattern>
    </encoder>
  </appender>

  <logger level="DEBUG" name="ua.com.foxminded.andriysalnikov.university" additivity="false">
    <appender-ref ref="FILE" />
    <appender-ref ref="CONSOLE" />
  </logger>

  <root level="ERROR">
    <appender-ref ref="FILE" />
    <appender-ref ref="CONSOLE" />
  </root>

</configuration>